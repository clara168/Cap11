<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Lista de Categorias</h3>
        {{#if admin}}
            <a href="/categoria/create" class="btn btn-primary">Adicionar Nova Categoria</a>
        {{/if}}
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrição</th>
                        {{#if admin}}
                            <th scope="col" class="text-center">Ações</th>
                        {{/if}}
                    </tr>
                </thead>
                <tbody>
                    {{#each categorias}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{this.nome}}</td>
                        <td>{{this.descricao}}</td>
                        {{#if ../admin}}
                            <td class="text-center">
                                <a href="/categoria/update/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
                                <a href="/categoria/delete/{{this.id}}" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja deletar esta categoria?');">Deletar</a>
                            </td>
                        {{/if}}
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="{{#if admin}}4{{else}}3{{/if}}" class="text-center">Nenhuma categoria encontrada.</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
