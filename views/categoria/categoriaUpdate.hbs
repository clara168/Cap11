<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header">
            <h3>Editar Categoria</h3>
        </div>
        <div class="card-body">
            <form action="/categoria/update" method="POST">
                {{! Campo oculto para enviar o ID da categoria que está sendo editada }}
                <input type="hidden" name="id" value="{{categoria.id}}">

                <div class="form-group">
                    <label for="nome">Nome da Categoria</label>
                    <input type="text" class="form-control" id="nome" name="nome" value="{{categoria.nome}}" required>
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <textarea class="form-control" id="descricao" name="descricao" rows="3">{{categoria.descricao}}</textarea>
                </div>
                <button type="submit" class="btn btn-success">Salvar Alterações</button>
                <a href="/categoria/list" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
