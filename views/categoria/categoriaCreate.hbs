<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header">
            <h3>Cadastrar Nova Categoria</h3>
        </div>
        <div class="card-body">
            <form action="/categoria/create" method="POST">
                <div class="form-group">
                    <label for="nome">Nome da Categoria</label>
                    <input type="text" class="form-control" id="nome" name="nome" placeholder="Ex: Esportes, Lazer, Corporativo" required>
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <textarea class="form-control" id="descricao" name="descricao" rows="3" placeholder="Descreva brevemente a finalidade desta categoria"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Salvar Categoria</button>
                <a href="/categoria/list" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
